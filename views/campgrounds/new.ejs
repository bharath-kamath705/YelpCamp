<%- layout('layouts/boilerplate.ejs') %>
    <a href="/campgrounds/index">Home</a>

    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form class="needs-validation" action="/campgrounds" method="POST" novalidate>
            <div class="mb-3" >
                <label class="form-label" for="title">Camp name</label>
                <input class="form-control" type="text" id="title" name="title" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input required class="form-control" type="text" id="location" name="location">
            </div>

            <div class="mb-3">
                <label class="form-label" for="image">Image url</label>
                <input class="form-control" type="text" id="image" name="image">
            </div>

            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="price-prepend">$</span>
                    </div>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price" name="price">
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="description"></textarea>
            </div>
            <div class="mb-3">
                <input class="btn btn-success" type="submit" value="Submit">
            </div>
        </form>
    </div>
