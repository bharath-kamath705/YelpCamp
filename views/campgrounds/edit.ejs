<%- layout('layouts/boilerplate.ejs') %>
<a href="/campgrounds/<%=campground._id%>">Back</a>
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Camp Name</label>
                <input class="form-control" type="text" value="<%=campground.title%>" id="title" name="title">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="location" value="<%=campground.location%>">
            </div>

            <div class="mb-3">
                <label class="form-label" for="image">Image url</label>
                <input class="form-control" type="text" id="image" name="image" value="<%=campground.image%>">
            </div>

            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="price-prepend">$</span>
                    </div>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price" name="price" value="<%=campground.price%>">
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="description" ><%=campground.description%></textarea>
            </div>
            <div class="mb-3">
                <input class="btn btn-info" type="submit" value="Update">
            </div>
        </form>
    </div>

